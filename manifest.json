{
  "manifest_version": 3,
  "name": "Page stickers",
  "version": "0.1",
  "description": "Decorate webpages with stickers.",
  "content_scripts": [{
    "js": ["scripts/content.js"],
    "css": ["scripts/content.css"],
    "matches": ["*://*/*"]
  }],
  "web_accessible_resources": [{
    "resources": ["stickers/*"],
    "matches": ["https://*/*"]
  }],
  "icons": {
    "16":  "icons/16.png",
    "32":  "icons/32.png",
    "64":  "icons/64.png",
    "128": "icons/128.png"
  }
}
